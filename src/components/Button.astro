---
interface Props {
    type: 'button' | 'link';
    variant: keyof typeof variants;
    href: string;
}

// button variants
const variants = {
    primary:
        'border text-black border-gray-200 hover:bg-gray-50 hover:border-gray-300 px-4 py-1 rounded-lg',
    text: 'text-black font-medium gap-2 hover:gap-3',
};

const { type, variant, href } = Astro.props;

const style_class = `w-fit inline-flex items-center justify-center text-sm  focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-all duration-100 ease-in-out ${variants[variant]}`;
---

<>
    {
        type === 'button' ? (
            <button class={style_class}>
                <slot />
            </button>
        ) : (
            <a href={href} class={style_class}>
                <slot />
            </a>
        )
    }
</>
