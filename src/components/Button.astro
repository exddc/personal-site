---
interface Props {
    type: 'button' | 'link';
    variant: keyof typeof variants;
    href: string;
}

// button variants
const variants = {
    primary:
        'bg-black text-white button-shadow border-black hover:shadow-[inset_1px_-2px_5px_rgba(255,255,255,1)]',
};

const { type, variant, href } = Astro.props;

const style_class = `w-fit inline-flex items-center justify-center px-4 py-1 border text-sm rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary transition-all duration-200 ease-in-out ${variants[variant]} hover:-translate-y-[1px] hover:translate-x-[1px]`;
---

<>
    {
        type === 'button' ? (
            <button class={style_class}>
                <slot />
            </button>
        ) : (
            <a href={href} class={style_class}>
                <slot />
            </a>
        )
    }
</>
